{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES6",
    //"emitDecoratorMetadata": false,
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "paths": {
      "@core/*": [
        "src/app/core/*"
      ],
      "@environment/*": [
        "src/environments/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@course-feature/*": [
        "src/app/features/course-feature/*"
      ],
      "@course-test-feature/*": [
        "src/app/features/course-test-feature/*"
      ],
      "@account-feature/*": [
        "src/app/features/account-feature/*"
      ],
      "@authentications-feature/*": [
        "src/app/features/authentications-feature/*"
      ],
      "@app/*": [
        "src/app/*"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
